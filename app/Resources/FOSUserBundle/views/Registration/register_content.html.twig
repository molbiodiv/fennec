{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-user-guide" style="border: none;">
            <div class="panel-heading">
                <div class="panel-title">Register to FENNEC</div>
            </div>
            <div class="panel-body" style="padding-left: 50px; padding-right: 30px; padding-top: 40px;">
                <form id="signupform" class="form-horizontal" role="form" action="{{ path('fos_user_registration_register') }}" method="post">
                    <div id="signupalert" style="display:none" class="alert alert-danger">
                        <p>Error:</p>
                        <span></span>
                    </div>
                    <div class="form-group">
                        {{ form_row(form.username) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.lastName) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.plainPassword) }}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-10">
                            <input class="btn btn-user" type="submit" value="{{ 'registration.submit'|trans }}" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
