{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h1 class="page-header" id="page-title">Your Profile</h1>
    </div>
</div>

<div class="container">
    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-user-guide" style="border: none;">
            <div class="panel-heading">
                <div class="panel-title">Update your profile</div>
            </div>
            <div class="panel-body" style="padding-left: 50px; padding-right: 30px; padding-top: 40px;">
                <form id="signupform" class="form-horizontal" role="form" action="{{ path('fos_user_profile_edit') }}" method="post">
                    <div id="signupalert" style="display:none" class="alert alert-danger">
                        <p>Error:</p>
                        <span></span>
                    </div>
                    <div class="form-group">
                        {{ form_row(form.username) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.lastName) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.plainPassword) }}
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-10">
                            <input class="btn btn-user" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
