{% for trait in traits %}
    {% set traitWithIcon = ['Plant Habit', 'Flower Color'] %}
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
        <div class="panel panel-trait">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        {% if trait.name in traitWithIcon %}
                            <img src="{{ asset('assets/img/trait/'~trait.name~'.png') }}" height="100px" style="float: left">
                        {% else %}
                            <img src="{{ asset('assets/img/trait/fallback.png') }}" height="100px" style="float: left">
                        {% endif %}
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">{{ trait.frequency }}</div>
                        <div>{{ trait.name }}</div>
                    </div>
                </div>
            </div>
            <a href="{{ path('trait_details', {'dbversion': dbversion, 'trait_type_id': trait.trait_type_id}) }}">
                <div class="panel-footer info-trait">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
{% endfor %}