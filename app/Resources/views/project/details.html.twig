{% extends 'base.navigation.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/Blackbird/lib/db.js') }}"></script>
    {% include 'project/details.js.html.twig' %}
    <script src="{{ asset('assets/js/project/details.js') }}"></script>
{% endblock %}

{% block content %}
    {% if project.error is defined %}
        <h3>Error: {{ project.error }}</h3>
    {% elseif project.projects < 1 %}
        <h3>Error: This project could not be found for the current user.</h3>
    {% else %}
        <!-- Overview -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Project overview
                    <button type="button" class="btn btn-default fa fa-pencil" data-toggle="modal" data-target="#editProjectDialog"></button>
                </h3>
            </div>
            <div id="react-table-test"></div>
            <table id="project-overview-table" class="table">
                <tbody>
                    <tr><th scope="row">ID</th><td id="project-overview-table-id"></td></tr>
                    <tr><th scope="row">Comment</th><td id="project-overview-table-comment"></td></tr>
                    <tr><th scope="row">#OTUs</th><td id="project-overview-table-rows"></td></tr>
                    <tr><th scope="row">#Samples</th><td id="project-overview-table-cols"></td></tr>
                    <tr><th scope="row">NNZ</th><td id="project-overview-table-nnz"></td></tr>
                    <tr><th scope="row">Import Date</th><td id="project-overview-table-import-date">{{ project['projects'][internal_project_id]['import_date'] }}</td></tr>
                    <tr><th scope="row">Import Filename</th><td id="project-overview-table-import-filename">{{ project['projects'][internal_project_id]['import_filename'] }}</td></tr>
                </tbody>
            </table>
        </div>

        <!-- Explore -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Explore</h3>
            </div>
            <button class='btn' id="inspect-with-blackbird-button">Inspect with Blackbird</button>
            <i data-toggle="tooltip" title="This is an experimental integration of Blackbird (see blackbird.iimog.org)." class="fa fa-question-circle"></i><br>
        </div>
        <div style="height: 100%"><iframe id='inspect-with-blackbird-iframe' width="100%" height="100%" style="border: none; display: none"></iframe></div>

        <!-- Traits -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Traits</h3>
            </div>
            <table id="trait-table" class="table trait-table trait-table-striped table-bordered" width="100%" cellspacing="0">
                <thead>
                <tr><th>trait</th><th>count</th><th>range</th><th>actions</th></tr>
                </thead>
            </table>
        </div>

        <!-- Mapping -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Mapping</h3>
            </div>
            <div class="panel-body">
                <div class="panel-body">
                    <h4>Summary</h4>
                    <table id="mapping-table" class="table">
                        <tbody>
                            <tr><td id="mapping-otu">1024</td><td>OTUs are mapped</td><td><div class="progress"><div id="progress-bar-mapping-otu" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">0%</div></div></td></tr>
                            <tr><td id="mapping-sample">33</td><td>Samples are mapped</td><td><div class="progress"><div id="progress-bar-mapping-sample" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">0%</div></div></td></tr>
                        </tbody>
                    </table>
                </div>
                <div class="panel-body">
                    <h4>Actions</h4>
                    Map
                    <select class="selectpicker" id="mapping-dimension-select" data-style="btn-primary">
                        <option value="rows">OTUs</option>
                        <option value="columns">Samples</option>
                    </select>
                    by NCBI tax id
                    <button class="btn btn-primary" id="mapping-action-button">GO</button>
                </div>
                <div class="panel-body" id="mapping-results-section" style="display: none">
                    <h4>Result</h4>
                    <div id="mapping-results"></div></br>
                    <button class="btn btn-primary" id="mapping-save-button">Save in database</button>
                    <button class="btn btn-primary" id="mapping-download-csv-button">Download csv</button>
                </div>
            </div>
        </div>

        <!-- Edit Dialog -->
        <div class="modal fade" id="editProjectDialog" tabindex="-1" role="dialog" aria-labelledby="editProjectDialogLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="editProjectDialogLabel">Edit Project Info</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="editProjectDialogProjectID">Project ID:</label>
                            <input type="text" class="form-control" id="editProjectDialogProjectID">
                        </div>
                        <div class="form-group">
                            <label for="editProjectDialogComment">Comment:</label>
                            <input type="text" class="form-control" id="editProjectDialogComment">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" id="editProjectDialogSaveButton">Save</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}