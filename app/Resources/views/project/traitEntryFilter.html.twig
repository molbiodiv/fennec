<div class="row">
    <aside class="col-sm-4">
        <p>Filter by Provider</p>
        <div class="card">
            <article class="card-group-item">
                <div class="filter-content">
                    <div class="card-body" id="trait-filter-by-provider-card">
                    </div>
                </div>
            </article>
        </div>
    </aside>
    <aside class="col-sm-4" style="display: none;" id="trait-filter-by-userdb-card">
        <p>Filter by User</p>
        <div class="card">
            <article class="card-group-item">
                <div class="filter-content">
                    <div class="card-body">
                        <label class="form-check">
                            <input class="form-check-input" type="text" id="trait-filter-by-user" placeholder="user id">
                        </label>
                    </div>
                </div>
            </article>
        </div>
    </aside>
    <aside class="col-sm-4">
        <p>Filter by Trait Format</p>
        <div class="card">
            <article class="card-group-item">
                <div class="filter-content">
                    <div class="card-body">
                        <div class="form-row">
                            <select class="selectpicker" id="trait-filter-by-format" data-style="btn-trait">
                                <option value="both" selected>both</option>
                                <option value="numerical">numerical</option>
                                <option value="categorical_free">categorical</option>
                            </select>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </aside>
</div>
<div class="row" style="margin-top: 20px;">
    <div class="col-lg-6">
        <input class="btn btn-trait" type="button" id="trait-filter-apply" value="Apply Filters">
    </div>
</div>

